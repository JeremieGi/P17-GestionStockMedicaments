<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Ce thème est le thème de l'application (défini dans le manifest) -->
    <!-- <style name="Theme.Rebonnte" parent="android:Theme.Material.Light.NoActionBar"> -->
    <style name="Theme.Rebonnte" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="Theme.Rebonnte.ActionBar" parent="android:Theme.Material.Light.DarkActionBar"/>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">#D3D3D3</item> <!-- Couleur de fond gris -->
        <item name="android:textColor">#000000</item>  <!-- Texte noir -->
    </style>

    <style name="FirebaseLoginTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Couleur des boutons -->
        <item name="colorPrimary">@color/cardview_dark_background</item>

        <item name="buttonStyle">@style/CustomButtonStyle</item>

        <!-- On API 21+ you can use android:statusBarColor -->
        <!-- Barre système en haut -->
        <item name="colorPrimaryDark">@color/design_default_color_primary</item>


    </style>

</resources>