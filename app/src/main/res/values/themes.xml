<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Ce thème est le thème de l'application (défini dans le manifest) -->
    <!-- <style name="Theme.Rebonnte" parent="android:Theme.Material.Light.NoActionBar"> -->
    <style name="Theme.Rebonnte" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Rebonnte.ActionBar" parent="android:Theme.Material.Light.DarkActionBar"/>


    <!-- TODO Denis : Comment visualiser les thèmes pour en choisir un ? -->

    <style name="FirebaseLoginTheme" parent="FirebaseUI">
        <!-- Couleur des boutons -->
        <item name="colorPrimary">@color/black</item>

        <item name="colorButtonNormal">@color/black</item>

        <!-- Je n'ai pas réussi à modifier les styles des champs de saisie comme indiquer dans les maquettes -->
        <!-- Couleur de fond des champs de saisie pas prise en compte -->
        <item name="android:editTextBackground">@color/cardAndInput</item>
        <!-- <item name="editTextStyle">@style/CustomTextInput</item> -->
        <!-- donc je change la couleur de fond -->
        <item name="android:background">@color/backgroundLoginLight</item>

        <!-- Centrer les éléments - Marche pas non plus -->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>

        <!-- On API 21+ you can use android:statusBarColor -->
        <!-- Barre système en haut -->
        <item name="colorPrimaryDark">@color/backgroundLoginLight</item>

    </style>

