<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    Ce thème est le thème de l'application (défini dans le manifest)
    -->
    <!-- <style name="Theme.Rebonnte" parent="android:Theme.Material.Light.NoActionBar"> -->
    <style name="Theme.Rebonnte" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Style avec ActionBar pour les fenêtres de détails -->
    <style name="Theme.Rebonnte.ActionBar" parent="android:Theme.Material.Light.DarkActionBar"/>


    <!-- Style utilisé par firebase AuthUI -->
    <style name="FirebaseLoginTheme" parent="FirebaseUI">

        <item name="android:background">@color/backgroundScreenColorAuthUI</item>
        <item name="colorPrimary">@color/primaryColorAuthUI</item>

    </style>


    <!-- Personnalisation de style des boutons (sinon blanc sur blanc par défaut)-->
    <style name="FirebaseUI.Button" parent="FirebaseLoginTheme">
        <item name="android:background">@color/buttonApp</item>     <!-- Couleur de fond des boutons de l'appli-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">right</item>            <!-- Bouton sur la drotie de l'écran-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius">5dp</item> <!-- Pas pris en compte -->
    </style>

    <!--  T099 - UI sombre : Fenêtre AthUi inutilisable en mode sombre -->




</resources>